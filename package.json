{
  "name": "pharma-guide",
  "version": "1.0.0",
  "description": "AI pharmacist assistant for ACME Retail Pharmacy",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run dist/server.js",
    "dev": "bun run src/index.ts",
    "server": "bun run src/server.ts",
    "server:prod": "bun run dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "RUN_E2E=1 bun test tests/e2e",
    "lint:md": "bunx markdownlint \"**/*.md\" --ignore node_modules",
    "fmt": "bunx prettier --write \"**/*.{md,json,ts}\" --ignore-path .gitignore",
    "fmt:check": "bunx prettier --check \"**/*.{md,json,ts}\" --ignore-path .gitignore"
  },
  "keywords": [
    "pharmacy",
    "ai",
    "assistant",
    "healthcare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "markdownlint-cli": "^0.38.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
